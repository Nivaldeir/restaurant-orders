{
  "compilerOptions": {
    "incremental": true,
    "typeRoots": [
      "./node_modules/@types",
      "types/globals.d.ts"
    ],
    "resolveJsonModule": true,
    "target": "ES2021",
    "experimentalDecorators": true,
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "./build",
    "./node_modules"
  ]
}